<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_userid"
            android:text="USERID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rgt_tv_userid"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tv_userid"
            android:text="mgjghjhgj"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_username"
            android:text="USERNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rgt_tv_username"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tv_username"
            android:text="mgjghjhgj"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_useraddress"
            android:text="ADDRESS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rgt_tv_useraddress"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tv_useraddress"
            android:text="mgjghjhgj"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_emailid"
            android:text="EMAIL ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/rgt_tv_emailid"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tv_emailid"
            android:text="mgjghjhgj"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>